@SUFFIX_LINE@

srcdir = @srcdir@
VPATH = @srcdir@

SHELL = @SHELL@

@SET_MAKE@

CC = g++
CFLAGS = @CFLAGS@ -DBOCHS --std=gnu++11
CXX = @CXX@
CXXFLAGS = @CXXFLAGS@ -DBOCHS --std=gnu++11

LDFLAGS = @LDFLAGS@
LIBS = @LIBS@
RANLIB = @RANLIB@


# ===========================================================
# end of configurable options
# ===========================================================


BX_OBJS = instrument.o \
  arbiter.o \
  estimate.o \
  explore.o \
  found_a_bug.o \
  kernel_specifics.o \
  landslide.o \
  lockset.o \
  memory.o \
  messaging.o \
  pp.o \
  rand.o \
  rbtree.o \
  save.o \
  schedule.o \
  stack.o \
  student.o \
  symtable.o \
  test.o \
  timetravel.o \
  user_specifics.o \
  user_sync.o \
  vector_clock.o \
  x86.o

BX_INCLUDES = instrument.h \
  arbiter.h \
  array_list.h \
  common.h \
  compiler.h \
  estimate.h \
  explore.h \
  found_a_bug.h \
  html.h \
  kernel_specifics.h \
  kspec.h \
  landslide.h \
  lockset.h \
  memory.h \
  messaging.h \
  pp.h \
  rand.h \
  rbtree.h \
  save.h \
  schedule.h \
  simulator.h \
  stack.h \
  student_specifics.h \
  symtable.h \
  test.h \
  timetravel.h \
  tree.h \
  user_specifics.h \
  user_sync.h \
  variable_queue.h \
  vector_clock.h \
  x86.h

BX_INCDIRS = -I../.. -I$(srcdir)/../.. -I. -I$(srcdir)/.

.@CPP_SUFFIX@.o:
	$(CXX) -c $(CXXFLAGS) $(BX_INCDIRS) @CXXFP@$< @OFP@$@


.c.o:
	$(CC) -c $(CFLAGS) $(BX_INCDIRS) @CFP@$< @OFP@$@



libinstrument.a: $(BX_OBJS)
	@RMCOMMAND@ libinstrument.a
	@MAKELIB@ $(BX_OBJS)
	$(RANLIB) libinstrument.a

$(BX_OBJS): $(BX_INCLUDES)


clean:
	@RMCOMMAND@ *.o
	@RMCOMMAND@ *.a

dist-clean: clean
	@RMCOMMAND@ Makefile
